{
  "hosting": [
    {
      "site": "car-aly",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],

      "headers": [
        {
          "source": "/manifest.json",
          "headers": [
            {
              "key": "Content-Type",
              "value": "application/manifest+json"
            }
          ]
        }
      ],

      "rewrites": [
        {
          "source": "/manifest.json",
          "destination": "/manifest.json"
        },
        {
          "source": "/icon-192.png",
          "destination": "/icon-192.png"
        },
        {
          "source": "/icon-512.png",
          "destination": "/icon-512.png"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],

  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
