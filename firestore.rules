// Firestore rules - Development version (permissive for testing)
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all reads and writes for authenticated users (dev mode)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Specific rules can be added as needed
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /cars/{carId} {
      allow read, write: if request.auth != null;
    }

    match /entries/{entryId} {
      allow read, write: if request.auth != null;
    }

    match /meta/{doc} {
      allow read, write: if request.auth != null;
    }
  }
}
